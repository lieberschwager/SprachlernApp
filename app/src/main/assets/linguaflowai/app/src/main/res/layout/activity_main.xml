<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sprachwahl -->
        <TextView
            android:id="@+id/tvSprache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sprache wählen:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerSprache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Modulwahl -->
        <TextView
            android:id="@+id/tvModul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modul wählen:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerModul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Premiumstatus -->
        <TextView
            android:id="@+id/tvPremium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premiumstatus: wird geladen..."
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="24dp" />

        <!-- Startbutton -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lernen starten"
            android:layout_marginTop="32dp" />
    </LinearLayout>
</ScrollView>